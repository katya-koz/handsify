@* @model Handsify.Models.HHStation *@
@{
    ViewData["Title"] = "_AddStationPartial";


}
<form id="station-form">
    <div class="container-fluid filled">
        <div class="d-flex w-100 align-items-center justify-content-between">
            <h6 class="m-0 ms-1">Add a Station:</h6>
            <button type="submit" class="btn p-0 border-0 bg-transparent" title="Add Station">
                <img class="icon" src="~/images/plus-circle.svg" alt="Add Station" />
            </button>
            
           
        </div>

        <p class="label">Station Name</p>
        <input class="form-control" id="station-name-input" name="stationName" required />

        <p class="label">Station ID</p>
        <input class="form-control" id="station-id-input" name="stationId" required />

        <p class="label">Station Location</p>
        <select class="form-control" name="stationLocation" id="station-location-select" required>
            <option value="Inside">Inside</option>
            <option value="Outside">Outside</option>
            <option value="Inside Extra">Inside Extra</option>
            
            <option value="Pillar">Pillar</option>
            <option value="Cart Area">Cart Area</option>
            <option value="Equipment">Equipment</option>
            <option value="Nourishment">Nourishment</option>
            <option value="Pneumatic Tube">Pneumatic Tube</option>
        </select>

        <p class="label">Station Type</p>
        <select class="form-control" name="stationType" id="station-type-select" required>
            <option value="Sanitizer">Sanitizer</option>
            <option value="Soap">Soap</option>
        </select>
    </div>
</form>

